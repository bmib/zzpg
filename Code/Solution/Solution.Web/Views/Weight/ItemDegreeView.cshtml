@using Solution.Framework.Contract
@using Solution.Framework.Utility
@using Solution.Framework.Web.Controls
@using Solution.Models;

@{
    ViewBag.Title = "ItemDegreeView";
}

@model List<WeightTask>

<div class="container">
    <div class="container-fluid">
        <div class="page-title">
            <ol class="breadcrumb">
                <li><a href="/Home/Index">首页</a></li>
                <li class="active">指标重要程度评估</li>
            </ol>
        </div>
        <form id="departForm" method="post">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>
                            评估名称
                        </th>
                        <th>
                            指标重要程度完成状态
                        </th>
                        <th style="width:30%;">
                            操作
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in Model)
                    {
                        <tr>
                            <td>
                                @m.Check.CheckName
                            </td>
                            <td>
                                @if (m.State == "0")
                                {
                                    <span>未完成</span>
                                }
                                else if (m.State == "1")
                                {
                                    <span>已完成</span>
                                }
                            </td>
                            <td align="center">
                                @if (m.State == "0")
                                {
                                    <a class="btn btn-success btn-sm" href="/Weight/ItemDegreeDetailView?WeightTaskID=@m.WeightTaskID">重要程度评估</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </form>
    </div>
</div>

