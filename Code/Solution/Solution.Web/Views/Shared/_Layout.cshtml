<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 资质评估系统</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("资质评估系统", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">系统管理<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("部门管理", "DepartManageView", "Manage")</li>
                            <li>@Html.ActionLink("人员管理", "UserManageView", "Manage")</li>
                            <li>@Html.ActionLink("指标库管理", "ItemManageView", "Manage")</li>
                            <li>@Html.ActionLink("评估管理", "CheckManageView", "Manage")</li>
                        </ul>
                    </li>
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">计算权重<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("重要性排序", "ItemSortView", "Weight")</li>
                            <li>@Html.ActionLink("重要程度评估", "ItemDegreeView", "Weight")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("资质评估", "CheckListView", "Assessment")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <center>
                <p>&copy; @DateTime.Now.Year - 资质评估系统 - www.zzpgxt.com</p>
            </center>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
